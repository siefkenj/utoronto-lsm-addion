{
    "name": "react-userscripts",
    "version": "1.5.0",
    "private": true,
    "dependencies": {
        "@types/esprima": "^4.0.3",
        "@types/react": "^17.0.21",
        "@types/react-bootstrap-range-slider": "^1.2.1",
        "@types/react-bootstrap-typeahead": "^5.1.7",
        "@types/react-dom": "^17.0.9",
        "bootstrap": "^4.6.0",
        "easy-peasy": "^5.0.3",
        "esprima": "^4.0.1",
        "file-saver": "^2.0.5",
        "npm-run-all": "^4.1.5",
        "react": "^17.0.2",
        "react-bootstrap": "^1.6.3",
        "react-bootstrap-range-slider": "^3.0.2",
        "react-bootstrap-typeahead": "^5.2.0",
        "react-dom": "^17.0.2",
        "route-parser": "0.0.5",
        "typescript": "^4.4.3",
        "vite": "^5.4.2"
    },
    "scripts": {
        "start": "npm-run-all --parallel build:watch preview",
        "preview": "vite preview",
        "build:watch": "vite build --watch",
        "build": "npm run build-styles && vite build",
        "finalize": "mkdir -p ../dist && cp src/userscript-header.js ../dist/react-userscripts.user.js && cat build/static/js/main.js >> ../dist/react-userscripts.user.js",
        "build-styles": "lessc src/namespaced-bootstrap.less src/namespaced-bootstrap.css"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "less": "^4.1.1"
    }
}
